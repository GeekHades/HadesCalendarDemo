<style name="tv_login">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1</item>
    <item name="android:gravity">left|center_vertical</item>
    <item name="android:textColor">@color/font_black_2</item>
    <item name="android:textSize">@dimen/font_size_base</item>
</style>


<style name="tv_base_user_module">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">@dimen/activity_user_module_base_margin</item>
    <item name="android:layout_marginRight">@dimen/activity_user_module_base_margin</item>
    <item name="android:textColor">@color/font_black_2</item>
    <item name="android:textSize">@dimen/font_size_base</item>
</style>

<style name="btn_base">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">@dimen/font_size_base</item>
</style>

<style name="dialog" parent="@android:style/Theme.Dialog">
    　　
    <item name="android:windowFrame">@null</item>
    　　
    <item name="android:windowIsFloating">true</item>
    　　
    <item name="android:windowIsTranslucent">false</item>
    　　
    <item name="android:windowNoTitle">true</item>
    　　
    <item name="android:background">@null</item>
    　　
    <item name="android:windowBackground">@color/trans</item>
    　　
    <item name="android:backgroundDimEnabled">true</item>
</style>

<style name="dialog_new" parent="@android:style/Theme.Dialog">
    　　
    <item name="android:windowFrame">@null</item>
    　　
    <item name="android:windowIsFloating">true</item>
    　　
    <item name="android:windowIsTranslucent">false</item>
    　　
    <item name="android:windowNoTitle">true</item>
    　　
    <item name="android:background">#00ffffff</item>
    　　
    <item name="android:windowBackground">@color/trans</item>
    　　
    <item name="android:backgroundDimEnabled">false</item>
</style>

